pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                bat 'docker build -t websocket-chat-app simple-chat-app'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                // Use full Python path if needed
                bat 'python -m pip install requests'
                bat 'python simple-chat-app\\test_homepage.py'
                bat 'python simple-chat-app\\test_content.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                bat '''
                FOR /F "tokens=*" %%i IN ('docker ps --filter "ancestor=websocket-chat-app" --format "{{.ID}}"') DO (
                    docker stop %%i
                )
                '''
                bat 'docker run -d -p 3000:3000 websocket-chat-app'
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed.'
        }
        failure {
            echo 'Pipeline failed. Attempting rollback...'
            bat '''
            FOR /F "tokens=*" %%i IN ('docker ps --filter "ancestor=websocket-chat-app" --format "{{.ID}}"') DO (
                docker stop %%i
            )
            '''
            bat 'docker run -d -p 3000:3000 websocket-chat-app'
        }
    }
}
