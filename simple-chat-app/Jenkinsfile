pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'docker build -t websocket-chat-app .'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                // Install Python and dependencies for tests
                sh 'apt-get update && apt-get install -y python3 python3-pip'
                sh 'pip3 install requests'
                // Execute the test scripts
                sh 'python3 test_homepage.py'
                sh 'python3 test_content.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application (locally)...'
                sh 'docker stop $(docker ps -q --filter ancestor=websocket-chat-app || true)'
                sh 'docker run -d -p 3000:3000 websocket-chat-app'
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed.'
        }
        failure {
            echo 'Pipeline failed. Attempting rollback...'
            // Rollback to a previous version if deployment fails
            sh 'docker stop $(docker ps -q --filter ancestor=websocket-chat-app || true)'
            sh 'docker run -d -p 3000:3000 websocket-chat-app'
        }
    }
}
