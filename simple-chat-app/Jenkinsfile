pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                bat 'docker build -t websocket-chat-app .'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                // Install Python and dependencies (adjust for Windows)
                bat 'python -m pip install requests'
                bat 'python test_homepage.py'
                bat 'python test_content.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application (locally)...'
                bat 'docker stop $(docker ps -q --filter ancestor=websocket-chat-app || true)'
                bat 'docker run -d -p 3000:3000 websocket-chat-app'
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed.'
        }
        failure {
            echo 'Pipeline failed. Attempting rollback...'
            // Rollback to a previous version
            bat 'docker stop $(docker ps -q --filter ancestor=websocket-chat-app || true)'
            bat 'docker run -d -p 3000:3000 websocket-chat-app'
        }
    }
}
